<Window x:Class="TheaterInventory.AddEditCostumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование костюма" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Название костюма:" />
            <TextBox Name="CostumeNameTextBox" Margin="0,0,0,10" />

            <TextBlock Text="Владелец:" />
            <ComboBox Name="OwnerComboBox" DisplayMemberPath="UserName" SelectedValuePath="UserId" Margin="0,0,0,10" />

            <Button Content="Сохранить" Click="SaveButton_Click" />
        </StackPanel>
    </Grid>
</Window>